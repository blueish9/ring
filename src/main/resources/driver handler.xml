<configuration>
    <driver name="com.mysql.cj.jdbc.Driver com.mysql.jdbc.Driver">
        <function>
            <if-null>ifnull</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.BatchPersistence</auto-generated-id>
            <manually-preset-id>org.ring.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.MySqlConverter</id-converter>
            <type-converter>org.ring.DefaultConverter</type-converter>
        </converter>

        <generator>org.ring.org.ring.exporter.generator.MysqlGenerator</generator>
    </driver>


    <driver name="com.microsoft.sqlserver.jdbc.SQLServerDriver">
        <function>
            <if-null>isnull</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.SequentialPersistence</auto-generated-id>
            <manually-preset-id>org.ring.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.SqlServerConverter</id-converter>
            <type-converter>org.ring.DefaultConverter</type-converter>
        </converter>

        <generator>org.ring.org.ring.exporter.generator.SqlServerGenerator</generator>
    </driver>


    <driver name="org.sqlite.JDBC">
        <function>
            <if-null>ifnull</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.SequentialPersistence</auto-generated-id>
            <manually-preset-id>org.ring.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.DefaultConverter</id-converter>
            <type-converter>org.ring.SqliteConverter</type-converter>
        </converter>

        <generator>org.ring.org.ring.exporter.generator.SqliteGenerator</generator>
    </driver>


    <driver name="org.postgresql.Driver">
        <function>
            <if-null>coalesce</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.BatchPersistence</auto-generated-id>
            <manually-preset-id>org.ring.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.DefaultConverter</id-converter>
            <type-converter>org.ring.DefaultConverter</type-converter>
        </converter>

        <generator>org.ring.org.ring.exporter.generator.PostgresGenerator</generator>
    </driver>


    <driver name="com.oracle">
        <function>
            <if-null>nvl</if-null>
        </function>

        <converter>
            <id-converter>org.ring.MySqlConverter</id-converter>
        </converter>
    </driver>
</configuration>
