<configuration>
    <driver name="com.mysql.cj.jdbc.Driver com.mysql.jdbc.Driver">
        <function>
            <if-null>ifnull</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.dml.transaction.save.impl.BatchPersistence</auto-generated-id>
            <manually-preset-id>org.ring.dml.transaction.save.impl.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.dml.transaction.save.converter.MySqlConverter</id-converter>
            <type-converter>org.ring.dml.query.converter.DefaultConverter</type-converter>
        </converter>

        <generator>org.ring.exporter.generator.MysqlGenerator</generator>
    </driver>


    <driver name="com.microsoft.sqlserver.jdbc.SQLServerDriver">
        <function>
            <if-null>isnull</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.dml.transaction.save.impl.SequentialPersistence</auto-generated-id>
            <manually-preset-id>org.ring.dml.transaction.save.impl.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.dml.transaction.save.converter.SqlServerConverter</id-converter>
            <type-converter>org.ring.dml.query.converter.DefaultConverter</type-converter>
        </converter>

        <generator>org.ring.exporter.generator.SqlServerGenerator</generator>
    </driver>


    <driver name="org.sqlite.JDBC">
        <function>
            <if-null>ifnull</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.dml.transaction.save.impl.SequentialPersistence</auto-generated-id>
            <manually-preset-id>org.ring.dml.transaction.save.impl.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.dml.transaction.save.converter.DefaultConverter</id-converter>
            <type-converter>org.ring.dml.query.converter.SqliteConverter</type-converter>
        </converter>

        <generator>org.ring.exporter.generator.SqliteGenerator</generator>
    </driver>


    <driver name="org.postgresql.Driver">
        <function>
            <if-null>coalesce</if-null>
        </function>

        <persistence-handler>
            <auto-generated-id>org.ring.dml.transaction.save.impl.BatchPersistence</auto-generated-id>
            <manually-preset-id>org.ring.dml.transaction.save.impl.PresetPersistence</manually-preset-id>
        </persistence-handler>

        <converter>
            <id-converter>org.ring.dml.transaction.save.converter.DefaultConverterr</id-converter>
            <type-converter>org.ring.dml.query.converter.DefaultConverter</type-converter>
        </converter>

        <generator>org.ring.exporter.generator.PostgresGenerator</generator>
    </driver>


    <driver name="com.oracle">
        <function>
            <if-null>nvl</if-null>
        </function>

        <converter>
            <id-converter>org.ring.MySqlConverter</id-converter>
        </converter>
    </driver>
</configuration>
